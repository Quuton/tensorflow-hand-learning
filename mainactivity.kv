#:kivy 1.9.0
<RootLayout>

    label1: label1
    button1: button1
    # camera1: camera1
    BoxLayout:
        orientation: 'vertical'
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "bottom"
            GridLayout:
                orientation: "lr-tb"
                rows:3
                cols:1
                size_hint: (0.5,0.8)
                padding: [0, 10, 0, 10]

                AnchorLayout:
                    anchor_x: "center"
                    anchor_y: "center"
                    size_hint: (1,1)

                    Camera:
                        id: camera1
                        resolution: (700, 700)
                        play: True

                Label:
                    id: label1
                    text: "Press the [SNAP] button to predict"
                    size_hint: (0.2,0.3)
                    font_size: 16
                
                Button:
                    id: button1
                    text:"Snap"
                    font_size: 16
                    size_hint: (0.3,0.1)
                    on_press: root.capture()
